<Window x:Class="StopWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StopWatch"
        xmlns:contrls="clr-namespace:StopWatch.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Bottom" Margin="5" Orientation="Horizontal">
            <CheckBox Name="checkTimer" Content="Timer Anzeigen" Click="checkTimer_Click"/>
            <!--<ComboBox Name="combobox"/>-->
        </StackPanel>
        <Grid Name="gridContent" Grid.Column="1" Grid.Row="1" >
            <contrls:ControlStopWatch x:Name="cntrlStopWatch" HorizontalAlignment="Left" />
            <contrls:ControlTimer   x:Name="cntrlTimer" HorizontalAlignment="Left" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
