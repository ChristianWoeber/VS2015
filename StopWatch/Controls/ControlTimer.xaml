<UserControl x:Class="StopWatch.Controls.ControlTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StopWatch.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DockPanel>
            <StackPanel>
                <Label Name="lblAusgabeTimer" Style="{StaticResource LblTimeStyle}"/>
                <TextBox Name="txtInput" Style="{StaticResource TextBoxStyle}" Width="{Binding ElementName=lblAusgabeTimer,Path=ActualWidth}"/>
                <!--<ToggleButton Style="{StaticResource ToggleButtonStyle}" Name="bttnStart" Click="bttnStart_Click"/>-->
                <ToggleButton Name="bttnStart" Click="bttnStart_Click" Style="{StaticResource ToggleButtonStyle }"/>
                <!--<Button Name="bttnPaused" Content="paused" Click="bttnPaused_Click"/>-->
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
