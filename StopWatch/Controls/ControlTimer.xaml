<UserControl x:Class="StopWatch.Controls.ControlTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StopWatch.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DockPanel>
            <StackPanel>
                <Label Name="lblAusgabeTimer"  Height="50"/>
                <TextBox Name="txtInput" Height="50"/>
                <!--<ToggleButton Style="{StaticResource ToggleButtonStyle}" Name="bttnStart" Click="bttnStart_Click"/>-->
                <Button Name="bttnStart" Content="start" Click="bttnStart_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
