<UserControl x:Class="StopWatch.Controls.ControlTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:StopWatch.Controls"
             xmlns:models="clr-namespace:StopWatch.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance models:StopWatchTimerViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DockPanel>
            <StackPanel>
                <controls:ControlTimerOutput x:Name="cntrlTimerOutput" Margin="10"/>            
                <ToggleButton Name="bttnStart" Click="bttnStart_Click" Style="{StaticResource ToggleButtonStyle }"/>              
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
